#!/bin/sh -e

VERSION=1.0

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

FLAKE="awing"
SYSTEM="nixosConfigurations.$FLAKE.system"

export NIXPKGS_ALLOW_UNFREE=1

cd $(dirname $(readlink -f $0))
cd ..

#echo "${GREEN}Starting...${CLEAR}"
nix --experimental-features 'nix-command flakes' build .#$SYSTEM --impure $@

echo "${GREEN}Switching to new generation...${CLEAR}"
sudo ./result/sw/bin/nixos-rebuild switch --flake .#$FLAKE --impure $@

#echo "${GREEN}Cleaning up...${CLEAR}"
rm -rf ./result

echo "${GREEN}Done${CLEAR}"
