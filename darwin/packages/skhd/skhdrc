## FOCUS
alt - h : yabai -m window --focus west || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east || yabai -m display --focus east
# arrows
#alt - left  : yabai -m window --focus west
#alt - down  : yabai -m window --focus south
#alt - up    : yabai -m window --focus north
#alt - right : yabai -m window --focus east
# cmd
# cmd - h : yabai -m window --focus west || yabai -m display --focus west
# cmd - j : yabai -m window --focus south || yabai -m display --focus south
# cmd - k : yabai -m window --focus north || yabai -m display --focus north
# cmd - l : yabai -m window --focus east || yabai -m display --focus east

## SPACES
#alt - 1 : yabai -m space --focus 1
#alt - 2 : yabai -m space --focus 2
#alt - 3 : yabai -m space --focus 3
#alt - 4 : yabai -m space --focus 4
#alt - 5 : yabai -m space --focus 5
#alt - 6 : yabai -m space --focus 6
#alt - 7 : yabai -m space --focus 7
#alt - 8 : yabai -m space --focus 8
#alt - 9 : yabai -m space --focus 9
#alt - 0 : yabai -m space --focus 10

# Disable Hide
cmd - h : :

# Close active window
alt - q : yabai -m window --close

## SHIFT
alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south 
alt + shift - k : yabai -m window --swap north 
alt + shift - l : yabai -m window --swap east 
# arrows
alt + shift - left : yabai -m window --swap west 
alt + shift - down : yabai -m window --swap south 
alt + shift - up : yabai -m window --swap north 
alt + shift - right : yabai -m window --swap east
# WARP
alt + cmd + shift - h : yabai -m window --warp west || yabai -m window --toggle split && yabai -m space --balance y-axis
alt + cmd + shift - j : yabai -m window --warp south || yabai -m space --rotate 90 && yabai -m space --balance x-axis
alt + cmd + shift - k : yabai -m window --warp up || yabai -m space --rotate 270 && yabai -m space --balance x-axis
alt + cmd + shift - l : yabai -m window --warp east || yabai -m window --toggle split && yabai -m space --balance y-axis

## INSERT
# set insertion point in focused container
alt + ctrl - h : yabai -m window --insert west
alt + ctrl - j : yabai -m window --insert south
alt + ctrl - k : yabai -m window --insert north
alt + ctrl - l : yabai -m window --insert east
# arrows
alt + ctrl - left  : yabai -m window --insert west
alt + ctrl - down  : yabai -m window --insert south
alt + ctrl - up    : yabai -m window --insert north
alt + ctrl - right : yabai -m window --insert east

## MOVE
# move focused window to next/prev workspace
alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
alt + shift - 0 : yabai -m window --space 10

## MIRROR
# # mirror tree y-axis
alt + shift - y : yabai -m space --mirror y-axis

# # mirror tree x-axis
alt + shift - x : yabai -m space --mirror x-axis

## LAYOUT
alt + shift - f : yabai -m window --toggle float
alt + shift - e : yabai -m space --layout bsp
alt + shift - s : yabai -m space --layout stack
# alt + cmd - l : yabai -m space --layout float

## RESIZE
alt + ctrl + shift - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20
alt + ctrl + shift - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0
alt + ctrl + shift - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20
alt + ctrl + shift - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0
# arrows
alt + ctrl + shift - up : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20
alt + ctrl + shift - left : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0
alt + ctrl + shift - down : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20
alt + ctrl + shift - right : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0


## MISC
# disable mouse autofocus
alt + shift + ctrl + cmd - m : yabai -m config focus_follows_mouse off
alt + shift + ctrl - m : yabai -m config focus_follows_mouse autofocus
# close focused window
alt - w : yabai -m window [<window selector>] --close

# enter fullscreen mode for the focused container
#alt + cmd - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen
# go back to previous workspace (kind of like back_and_forth in i3)
alt - b : yabai -m space --focus recent

# move focused window to previous workspace
alt + shift - b : yabai -m window --space recent; \
                  yabai -m space --focus recent

# balance size of windows
alt + shift - 0 : yabai -m space --balance


# cycle through stack windows
#alt - p : yabai -m window --focus stack.next || yabai -m window --focus south
#alt - n : yabai -m window --focus stack.prev || yabai -m window --focus north

# forwards
alt + shift - p : yabai -m query --spaces --space \
            | jq -re ".index" \
            | xargs -I{} yabai -m query --windows --space {} \
            | jq -sre "add | map(select(.minimized != 1)) | sort_by(.display, .frame.y, .frame.x, .id) | reverse | nth(index(map(select(.focused == 1))) - 1).id" \
            | xargs -I{} yabai -m window --focus {}

# backwards
alt + shift - n : yabai -m query --spaces --space \
            | jq -re ".index" \
            | xargs -I{} yabai -m query --windows --space {} \
            | jq -sre "add | map(select(.minimized != 1)) | sort_by(.display, .frame.y, .frame.y, .id) | nth(index(map(select(.focused == 1))) - 1).id" \
            | xargs -I{} yabai -m window --focus {}


## RELOAD
#ctrl + alt + cmd - r : brew services restart yabai
#ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
#ctrl + alt + cmd - r : brew services restart koekeishiya/formulae/yabai
